<Window x:Class="Main.Graphs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        Title="Graphs" Height="320.956" Width="523.897" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Height="292" VerticalAlignment="Top" HorizontalAlignment="Left" Width="518">
        <chartingToolkit:Chart Name="statistics">
            <chartingToolkit:Chart.Axes>
                <chartingToolkit:LinearAxis x:Name="horizontalAxis" Orientation="X" Title="Item"  ShowGridLines="True"/>
                <chartingToolkit:LinearAxis x:Name="verticalAxis" Orientation="Y" Title="Cost [£]"  ShowGridLines="True"/>
            </chartingToolkit:Chart.Axes>
            <chartingToolkit:AreaSeries x:Name="series" DependentValuePath="">
            </chartingToolkit:AreaSeries>
        </chartingToolkit:Chart>
    </Grid>
</Window>
