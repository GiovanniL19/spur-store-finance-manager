<Window x:Class="Main.Graphs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolK="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        Title="Graphs" Height="396.956" Width="967.897" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,4,-9">
        <Button Content="Load Selected Suppliers Data" Click="loadBtn_Click" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Background="White"/>
        <toolK:Chart Canvas.Top="80" Canvas.Left="10" Name="mainChart" Background="White" Margin="0,35,0,21">
            <toolK:Chart.Series>
                <toolK:ColumnSeries Title="Supplier" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}">
                </toolK:ColumnSeries>
            </toolK:Chart.Series>
        </toolK:Chart>
    </Grid>
</Window>
