<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="563.416" Width="1033.409" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="205*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#eeeeee"/>
        <Label Content="CSV Files Report" HorizontalAlignment="Left" Margin="14,6,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FF5D5D5D" Height="31" Width="126"/>
        <Button Grid.Row="0" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="66" Height="55" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="selectFolderBtn_Click">
            <StackPanel>
                <Image x:Name="folderIcon" Height="30" Width="30" Source="folderIcon.png" />
                <TextBlock FontSize="10">Select Folder</TextBlock>
            </StackPanel>
        </Button>
        <Expander Header="Report" HorizontalAlignment="Left" Margin="14,11,0,0" VerticalAlignment="Top" Grid.Row="1" Height="389" IsExpanded="True" Width="547">
            <Grid Background="#CCCCCC" Width="545" Height="401" >
                <RichTextBox Name="reportGenText" HorizontalAlignment="Left" Height="366" VerticalAlignment="Top" Width="545" IsReadOnlyCaretVisible="True" BorderThickness="0" Block.LineStackingStrategy="BlockLineHeight" VerticalScrollBarVisibility="Auto" Block.TextAlignment="Center">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text=""/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Grid>
        </Expander>
        <Button Grid.Row="0" HorizontalAlignment="Left" Margin="81,38,0,0" VerticalAlignment="Top" Width="66" Height="55" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="getReportBtn_Click">
            <StackPanel>
                <Image x:Name="reportIcon" Height="30" Width="30" Source="report.png" />
                <TextBlock FontSize="10">Report</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="0" HorizontalAlignment="Left" Margin="951,38,0,0" VerticalAlignment="Top" Width="66" Height="55" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="getReportBtn_Click">
            <StackPanel>
                <Image x:Name="reportIcon1" Height="30" Width="30" Source="report.png" />
                <TextBlock FontSize="10">View</TextBlock>
            </StackPanel>
        </Button>
        <Expander Header="Filter" HorizontalAlignment="Left" Margin="193,14,0,0" VerticalAlignment="Top" Height="100" Width="758" IsExpanded="True">
            <ComboBox HorizontalAlignment="Left" Margin="30,0,0,0" Width="120" Height="24">
                <ComboBoxItem  Content="All Stores"/>
                <ComboBoxItem Content="Selected Store"/>
            </ComboBox>
        </Expander>

    </Grid>
</Window>
